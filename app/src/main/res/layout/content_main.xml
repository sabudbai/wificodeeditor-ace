<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sirajinhoapp.wificodeeditor.MainActivity"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"
        app:cardCornerRadius="5dp"
        android:background="@drawable/icebox"
        android:layout_height="60dp">

        <android.support.v7.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch on Wifi Code Editor"
            android:id="@+id/startSwitch"
            android:padding="8dp"
            android:layout_gravity="center_vertical" />

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"
        app:cardCornerRadius="5dp"
        android:background="@drawable/icebox"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            android:text="Listen Port"/>
        <EditText
            android:layout_width="100dp"
            android:padding="8dp"
            android:hint="8080"
            android:textAlignment="textEnd"
            android:id="@+id/portEditText"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"
        app:cardCornerRadius="5dp"
        android:background="@drawable/icebox"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            android:text="Workspace"/>
        <EditText
            android:layout_width="250dp"
            android:padding="8dp"
            android:singleLine="true"
            android:editable="false"
            android:id="@+id/workspaceEditText"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"
        app:cardCornerRadius="5dp"
        android:background="@drawable/icebox"
        android:layout_height="60dp">

        <android.support.v7.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Files in new Tab"
            android:id="@+id/openFilesSwitch"
            android:padding="8dp"
            android:layout_gravity="center_vertical" />

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"
        app:cardCornerRadius="5dp"
        android:background="@drawable/icebox"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:textSize="18sp"
            android:padding="8dp"
            android:id="@+id/editorAddress"
            android:text=""/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="8dp"
            android:id="@+id/shareAddress"
            android:src="@android:drawable/ic_menu_share"/>

    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Wifi Code Editor v.0.1 by sirajinhoapp"/>
    </LinearLayout>
</LinearLayout>
